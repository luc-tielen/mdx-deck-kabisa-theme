{
  "name": "mdx-deck-kabisa-theme",
  "private": true,
  "version": "0.1.0",
  "description": "Custom mdx-deck theme for use in presentations",
  "keywords": [
    "mdx",
    "mdx-deck",
    "kabisa"
  ],
  "author": "Pascal Widdershoven",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/mdx-deck-kabisa-theme.js",
  "scripts": {
    "build": "NODE_ENV=${NODE_ENV:-production} rollup -c",
    "start": "NODE_ENV=${NODE_ENV:-development} rollup -c -w"
  },
  "dependencies": {
    "mdx-deck": "^1.7.14",
    "react": "^16.0.0",
    "react-syntax-highlighter": "^10.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "file-loader": "^3.0.1",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "raw-loader": "^1.0.0",
    "rollup": "^1.2.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "webpack": "^4.29.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "compat",
      "prettier",
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true
      }
    },
    "settings": {
      "react": {
        "pragma": "h",
        "version": "15.6"
      }
    },
    "rules": {
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "no-async-promise-executor": "error",
      "prettier/prettier": "error",
      "compat/compat": "error",
      "react/no-unknown-property": [
        "error",
        {
          "ignore": [
            "class",
            "for"
          ]
        }
      ],
      "react/prop-types": "off",
      "react/display-name": "off",
      "mocha/no-exclusive-tests": "error"
    }
  },
  "eslintIgnore": [
    "*.config.js"
  ]
}
